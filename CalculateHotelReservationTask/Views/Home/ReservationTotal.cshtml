@{
    ViewData["Title"] = "Reservation Total";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2 justify-content-center">
            <h2 class="text-center">Reservation Total</h2>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.ErrorMessage
                </div>
            }
            else
            {
                <div class="alert alert-success " role="alert">
                    <h4 class="alert-heading text-center" >Thanks for your stay!</h4>
                    <p class="text-center">The total price for @ViewBag.RoomCounter room(s) is: EGP @ViewBag.TotalPrice</p>
                    <h5 class="text-center">Enjoy Your Stay</h5>

                </div>
            }
        </div>
    </div>
</div>